    <script>
        const config = { apiKey: "AIzaSyBO9wgYm6lIz9YzO8OpyuSJLqLvnI_XZVE", databaseURL: "https://gacorboy7777-default-rtdb.asia-southeast1.firebasedatabase.app" };
        firebase.initializeApp(config); const fb = firebase.database();

        function unlock() {
            // Password baru sesuai request Hanin: kairi777
            if(document.getElementById('pass').value === 'kairi777') {
                document.getElementById('lock').style.display = 'none';
                document.getElementById('content').style.display = 'block';
                render();
            } else { alert("Password Salah!"); }
        }

        function render() {
            fb.ref('players').on('value', s => {
                const list = document.getElementById('p-list'); list.innerHTML = '';
                s.forEach(c => {
                    const p = c.val();
                    let color = p.r === 'win' ? '#00e676' : (p.r === 'loss' ? '#ff1744' : '#3b82f6');
                    list.innerHTML += `<tr>
                        <td>${p.u}</td>
                        <td>Rp ${p.bal.toLocaleString()}</td>
                        <td><button onclick="setNasib('${p.u}','${p.r}')" class="btn-status" style="background:${color}">${p.r.toUpperCase()}</button></td>
                        <td><button onclick="suntik('${p.u}')" style="background:#444; color:white;">ðŸ’‰ SUNTIK</button></td>
                    </tr>`;
                });
            });
            fb.ref('reqs').on('value', s => {
                const list = document.getElementById('r-list'); list.innerHTML = '';
                s.forEach(c => {
                    const r = c.val();
                    if(r.s === 'pending') {
                        list.innerHTML += `<tr>
                            <td>${r.u}</td>
                            <td>Rp ${r.a.toLocaleString()}</td>
                            <td>${r.t.toUpperCase()}</td>
                            <td><button onclick="acc('${c.key}')" style="background:#00e676">ACC</button></td>
                        </tr>`;
                    }
                });
            });
        }

        function setNasib(u, cR) { 
            const nR = cR==='win' ? 'loss' : (cR==='loss' ? 'normal' : 'win'); 
            fb.ref('players/'+u).update({r: nR}); 
        }
        function suntik(u) { 
            const a = parseInt(prompt('Berapa saldo yang mau di-inject ke ' + u + '?')); 
            if(a) fb.ref('players/'+u).get().then(s => fb.ref('players/'+u).update({bal: s.val().bal + a})); 
        }
        function acc(k) {
            fb.ref('reqs/'+k).get().then(s => {
                const r = s.val(); fb.ref('players/'+r.u).get().then(pS => {
                    let nB = r.t==='depo' ? pS.val().bal+r.a : pS.val().bal-r.a;
                    fb.ref('players/'+r.u).update({bal: nB}); fb.ref('reqs/'+k).update({s: 'done'});
                });
            });
        }
    </script>
